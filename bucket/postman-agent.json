    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl-agent.pstmn.io/download/$version/Postman-Agent-win64-$version-Setup.exe#/dl.7z",
                "hash": {
                    "url": "https://dl-agent.pstmn.io/RELEASES?platform=win64&from=$version",
